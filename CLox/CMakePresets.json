{
  "version": 6,

  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "base-linux",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "default",
      "displayName": "Default Debug",
      "inherits": "base",
      "binaryDir": "build/default-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },

    {
      "name": "default-linux",
      "displayName": "Default Debug (Linux)",
      "inherits": "base-linux",
      "binaryDir": "build/linux-default-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },

    {
      "name": "profile-debug",
      "displayName": "Profiling Debug (Symbols, no sanitize)",
      "inherits": "base",
      "binaryDir": "build/profile-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS_DEBUG": "/Od /Oy- /clang:-fstack-usage",
        "CMAKE_CXX_FLAGS_DEBUG": "/Od /Oy- /clang:-fstack-usage",
        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "/DEBUG"
      }
    },

    {
      "name": "profile-debug-linux",
      "displayName": "Profiling Debug (Linux: Symbols, no sanitize)",
      "inherits": "base-linux",
      "binaryDir": "build/linux-profile-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS_DEBUG": "-O0 -g -fno-omit-frame-pointer -fstack-usage",
        "CMAKE_CXX_FLAGS_DEBUG": "-O0 -g -fno-omit-frame-pointer -fstack-usage"
      }
    },

    {
      "name": "release",
      "displayName": "Release",
      "inherits": "base",
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "release-linux",
      "displayName": "Release (Linux)",
      "inherits": "base-linux",
      "binaryDir": "build/linux-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "asan-linux",
      "displayName": "Debug + ASan/UBSan (Linux)",
      "inherits": "base-linux",
      "binaryDir": "build/linux-asan-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS_DEBUG": "-O0 -g -fno-omit-frame-pointer -fsanitize=address,undefined",
        "CMAKE_CXX_FLAGS_DEBUG": "-O0 -g -fno-omit-frame-pointer -fsanitize=address,undefined",
        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "-fsanitize=address,undefined"
      }
    }
  ],

  "buildPresets": [
    { "name": "default-debug", "configurePreset": "default", "targets": ["CLox"] },
    { "name": "profile-debug", "configurePreset": "profile-debug", "targets": ["CLox"] },
    { "name": "release", "configurePreset": "release", "targets": ["CLox"] },

    { "name": "linux-default-debug", "configurePreset": "default-linux", "targets": ["CLox"] },
    { "name": "linux-profile-debug", "configurePreset": "profile-debug-linux", "targets": ["CLox"] },
    { "name": "linux-release", "configurePreset": "release-linux", "targets": ["CLox"] },
    { "name": "linux-asan-debug", "configurePreset": "asan-linux", "targets": ["CLox"] }
  ]
}
