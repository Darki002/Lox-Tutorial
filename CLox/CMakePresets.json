{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 21 },
  "configurePresets": [
    {
      "name": "debug-clang",
      "displayName": "Debug (Clang + Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/debug-clang",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-clang",
      "displayName": "Release (Clang + Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/release-clang",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug-clang",
      "configurePreset": "debug-clang"
    },
    {
      "name": "build-release-clang",
      "configurePreset": "release-clang"
    }
  ],
  "testPresets": [
    {
      "name": "test-debug-clang",
      "configurePreset": "debug-clang"
    }
  ]
}
